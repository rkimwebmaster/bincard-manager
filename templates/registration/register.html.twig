{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
	{% block lesite %} <span class="fa fa-angle-double-right"> </span> Users  
						{% endblock %}
{% block titre %}
	Cr√©ation des utilisateurs
{% endblock %}

{% block lesboutons %}
	<a href="{{url('user_index')}}" title="Liste des utilisateurs  " class="btn btn-info">
		<i class="fa fa-reply-all"></i>
	</a>
	<a href="{{url('app_register')}}" title="Ajouter nouveau " class="btn btn-info">
		<i class="fas fa-plus-circle"></i>
	</a>
{% endblock %}
{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	{{ form_start(registrationForm) }}
	{{ form_errors(registrationForm) }}
	{{ form_row(registrationForm.username) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
	{{ form_row(registrationForm.nom) }}
	{{ form_row(registrationForm.postnom) }}
	{{ form_row(registrationForm.telephone) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.adresse) }}
	{{ form_row(registrationForm.siteGeres) }}
	{{ form_row(registrationForm.roles) }}
	{{ form_row(registrationForm.agreeTerms) }}

    <button class="btn btn-info">  
    <span class="fa fa-download "> </span>
    {{ button_label|default('Enregistrer') }}</button>
    
    	{{ form_end(registrationForm) }}
{% endblock %}
