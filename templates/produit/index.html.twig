{% extends 'base.html.twig' %}

{% block title %}Produit  liste
{% endblock %}


{% block titre %}
	Liste des produits
{% endblock %}
	{% block lesite %} <span class="fa fa-angle-double-right"> </span> Config.  
						{% endblock %}
{% block lesboutons %}
	<a href="{{ path('produit_new') }}" type="button" title="Ajouter nouveau " class="btn btn-info">
		<i class="fas fa-plus-circle"></i>
	</a>
{% endblock %}
{% block body %}

	<table id="example1" class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>PN</th>
				<th>Déscription</th>
				<th>Quantité</th>
				<th>Prix de Vente</th>
				<th>actions</th>
			</tr>
		</thead>
				<tfoot>
			<tr>
				<th>#</th>
				<th>PN</th>
				<th>Déscription</th>
				<th>Quantité</th>
				<th>Prix de Vente</th>
				<th>actions</th>
			</tr>
		</tfoot>
		<tbody>
			{% for produit in produits %}
				<tr {% if produit.isDangerStock %} class="text-danger" title="danger de stock" {% endif %}>
					<td>{{ loop.index }}</td>
					<td>{{ produit.pn }}</td>
					<td>{{ produit.description }}</td>
					<td>{{ produit.quantite }}</td>
					<td>{{ produit.prixVente }}</td>
					<td>
						<div class="btn-group float-sm-right">
							<a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm">
								<i class="fas fa-search-plus "></i>
							</a>
							<a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-info btn-sm">
								<i class="fas fa-edit"></i>
							</a>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">aucun enregistrements dans la base</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
