    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container">
        <div class="row">

                  {% for site in sites %}
          <!-- /.col-md-6 -->
          <div class="col-lg-3">

            <div class="card card-primary card-outline">
              <div class="card-header">
                <h5 class="card-title m-0">{{site.designation}} 
                {% if site.isWarehouse %}
									<span title="ce site est un warehouse" class="fa fa-tags"></span>
								{% endif %}
                
                -- {{site.code}}</h5>
              </div>
              <div class="card-body">
                <h6 class="card-title">{{site.validationAttendu}} validation(s) attendue(s) </h6>

                <p class="card-text">Ville: {{site.ville}}- Téléphone: {{site.telephone}}.
                {% if site.isWarehouse %} Ce site est un warehouse {% else  %}
                Ce site n'est pas un warehouse 
                {% endif %}
                </p>
                <a href="{{ path('site_actif', {'id': site.id}) }}" class="btn btn-primary">Active moi</a>
              </div>
            </div>
          
          </div>
          {% endfor %}
          <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
