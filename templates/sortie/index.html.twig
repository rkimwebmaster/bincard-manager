{% extends 'base.html.twig' %}

{% block title %}Sortie  liste
{% endblock %}
{% block titre %}
	Liste des sorties
{% endblock %}
{% block lesite %}
	<span class="fa fa-angle-double-right"></span>
	Sortie
{% endblock %}
{% block lesboutons %}
	<a href="{{url('creation_sortie')}}" title="Ajouter nouveau " class="btn btn-info">
		<i class="fas fa-plus-circle"></i>
	</a>
{% endblock %}
{% block body %}

	<table id="example1" class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Date</th>
				<th>Client</th>
				<th>IDD #
				</th>
				<th>Machine #</th>
				<th>Site envoie</th>
				<th>actions</th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<th>#</th>
				<th>Date</th>
				<th>Client</th>
				<th>IDD #
				</th>
				<th>Machine #</th>
				<th>Site envoie</th>
				<th>actions</th>
			</tr>
		</tfoot>
		<tbody>
			{% for sortie in sorties %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ sortie.date ? sortie.date|date('d/M/Y') : '' }}</td>
					<td>{{ sortie.client }}</td>
					<td>{{ sortie.iddNumber }}</td>
					<td>{{ sortie.machineNumber }}</td>
					<td>{{ sortie.siteEnvoie }}</td>
					<td>
						<div class="btn-group float-sm-right">
							<a href="{{ path('sortie_show', {'id': sortie.id}) }}" class="btn btn-info btn-sm">
								<i class="fas fa-search-plus "></i>
							</a>
							{% if not sortie.isDamage %}

								<a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-info btn-sm">
									<i class="fas fa-edit"></i>
								</a>
							{% endif %}

							{% if sortie.isDamage %}
								<a href="{{ path('sortie_damage_edit', {'id': sortie.id}) }}" class="btn btn-info btn-sm" title="Modiiez sortie spÃ©ciale">
									<i class="fas fa-edit"></i>
								</a>
							{% endif %}

						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">aucun enregistrements dans la base</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
