{% extends 'base.html.twig' %}

{% block title %}Edit Client
{% endblock %}
{% block titre %}
	Modifier client {{client.code }}
{% endblock %}
{% block lesite %}
	<span class="fa fa-angle-double-right"></span>
	Config.
{% endblock %}
{% block lesboutons %}
	<a href="{{ path('client_index') }}" title="Retour à la liste " class="btn btn-info">
		<i class="fa fa-reply-all"></i>
	</a>
	<a href="{{ path('client_new') }}" title="Ajouter nouveau " class="btn btn-info">
		<i class="fas fa-plus-circle"></i>
	</a>
	<a action="{{ path('client_delete', {'id': client.id}) }}" onclick="return confirm('Etes-vous sûre de vouloir supprimer cet élément?');" title="Supprimer élément" class="btn btn-info">
		<i class="fas fa-trash"></i>
	</a>
{% endblock %}
{% block body %}

	{{ include('client/_form.html.twig', {'button_label': 'Update'}) }}
	{{ include('client/_delete_form.html.twig') }}
{% endblock %}
