                    {# {% if not r_annuel_general.isCloture %} #}
                    <a class="btn btn-default" href="{{ path('r_annuel_general_delete', {'id': r_annuel_general.id}) }}"><span class="text-danger fa fa-trash" /></a>
                    {# {% endif %} #}
               </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('r_annuel_general_new') }}">Create new</a>
