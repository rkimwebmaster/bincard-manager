		<i class="fas fa-plus-circle"></i>
	</a>
{% endblock %}
{% block body %}
	<table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Année</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for r_annuel_general in r_annuel_generals %}
            <tr>
                <td>{{ loop.index }}</td>
