{% extends 'base.html.twig' %}

{% block title %}Ville index
{% endblock %}
{% block titre %}
	Liste des villes
{% endblock %}
{% block lesboutons %}
	<a href="{{ path('ville_new') }}" title="Ajouter nouveau " class="btn btn-info">
		<i class="fas fa-plus-circle"></i>
	</a>

{% endblock %}
	{% block lesite %} <span class="fa fa-angle-double-right"> </span> Config.  
						{% endblock %}
{% block body %}
	<table id="example1" class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Designation</th>
				<th>actions</th>
			</tr>
		</thead>
				<tfoot>
			<tr>
				<th>#</th>
				<th>Designation</th>
				<th>actions</th>
			</tr>
		</tfoot>
		<tbody>
			{% for ville in villes %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ ville.designation }}</td>
					<td>
						<div class="btn-group float-sm-right">
							<a class="btn btn-info" href="{{ path('ville_show', {'id': ville.id}) }}">
								<i class="fas fa-search-plus "></i>
							</a>
							<a class="btn btn-info" href="{{ path('ville_edit', {'id': ville.id}) }}">
								<i class="fas fa-edit"></i>
							</a>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
